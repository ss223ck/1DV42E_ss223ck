@model List<Schema_Application.ViewModels.WeekDayViewModel>

@for (int i = 0; i < Model.Count(); i++)
{
    string name = (@Model[i].Counter.HasValue) ? "[" + @Model[i].Counter.ToString() + "].WeekDayId": "WeekDayId";
    <label for="dayOfWeek" class="checkbox-label">@Model[i].Day</label>    <input type="checkbox" name="@name" value="@Model[i].WeekDayId" class="week-day-checkbox"/><br />
}