@model Schema_Application.ViewModels.RandomizeActivitySummeriesViewModel

<div class="randomize-activitysummery">
    <div class="form">
        <div class="exitbar-holder">
            <a id="exitbar-holder-@Model.CountIndex" href="#">
                <img src="~/Content/icon/black-exit.png" />
            </a>
        </div>
        <div id="activity-holder" class="form-group randomize-group">
            <h3>@Model.ActivityName</h3>
        </div>
        <div id="[@Model.CountIndex]activityID-holder">
            @Html.HiddenFor(m => m.ActivityId, new { @Name = "[" + @Model.CountIndex + "].ActivityId"} )
        </div>
        <div id="[@Model.CountIndex]timesAWeek-holder" class="form-group randomize-group">

            @Html.LabelFor(m => m.ActivityTimesCountsInWeek)
            @Html.EditorFor(m => m.ActivityTimesCountsInWeek, new {htmlAttributes = new { @Name = "[" + @Model.CountIndex + "].ActivityTimesCountsInWeek", @class = "form-control" }})
        </div>
        <div id="[@Model.CountIndex]dayOfWeek-holder" class="form-group randomize-group">
            <p>Optional</p>
            <p>Choose which days of the week you can do this activity on </p>
        </div>
        
        <div id="hours-holder" class="form-group randomize-group">
            @Html.LabelFor(model => model.ActivityTime)
            @Html.EditorFor(model => model.ActivityTime, new { htmlAttributes = new { @Name = "[" + Model.CountIndex + "].ActivityTime", @class = "form-control" } })
        </div>
        <div id="description-holder" class="form-group randomize-group">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @Name = "[" + Model.CountIndex + "].Description", @class = "form-control" } })
        </div>
    </div>
</div>