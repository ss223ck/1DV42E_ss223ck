@model IList<Schema_Application.ViewModels.RandomizeActivitySummeriesViewModel>


@{
    ViewBag.Title = "Randomize Schema";
    Layout = "~/Views/Shared/_LayoutSchema.cshtml";
}

<div class="page-header">
    <h2>Randomize Schema</h2>
</div>

<div id="page-container">
    <div class="information-container" id="generate-activity-group-container">
        <div class="form-group" id="activity-holder">

        </div>
        <div class="form-group">
            <input type="button" id="generateNewActivity" class="btn btn-default" value="Get new activity" />
        </div>
    </div>
    @Html.Partial("_GenerateSchema")
    <div id="" class="information-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" id="saveSchema" class="btn btn-default" value="Save schema" />

            <div id="schema-container">

            </div>
        }
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Scripts/AppSpecificScripts/get-information.js")
    @Scripts.Render("~/Scripts/AppSpecificScripts/randomize-schema.js")
    @Scripts.Render("~/bundles/ajax")
}