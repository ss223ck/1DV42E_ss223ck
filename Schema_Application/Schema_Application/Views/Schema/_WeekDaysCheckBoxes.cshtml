@model List<Schema_Application.ViewModels.WeekDayViewModel>

@for (int i = 0; i < Model.Count(); i++)
{
    <!--Special case in _RandomizeActivitySummery the checkboxes need to have indexed names for the view model to keep track of all the different days in the different activities-->
    string name = (@Model[i].Counter.HasValue) ? "[" + @Model[i].Counter.ToString() + "].WeekDayId": "WeekDayId";
    <label for="dayOfWeek">@Model[i].Day</label>    <input type="checkbox" name="@name" value="@Model[i].WeekDayId" />
}